{
    "name": "floriankarsten/merkur-blocks-loader",
    "description": "Kirby CMS blocks auto loader for Merkur or to be used alone",
    "type": "kirby-plugin",
    "license": "MIT",
    "authors": [
        {
            "name": "Florian Karsten",
            "email": "code@floriankarsten.com"
        }
    ],
    "require": {
        "getkirby/composer-installer": "^1.1",
        "php": ">=7.4.0",
        "getkirby/cms": "^3.6"
    },
    "autoload": {
		"psr-4": {
            "Merkur\\": "src/"
        }
	},
    "config": {
        "optimize-autoloader": true
    }
}
